
{
  "name": "services",
  "options": {
    "validator": {
      "$jsonSchema": {
        "bsonType": "object",
        "required": ["serviceId", "nameFr", "nameEn", "category", "basePrice", "status"],
        "properties": {
          "serviceId": {
            "bsonType": "string",
            "description": "Identifiant unique du service"
          },
          "nameFr": {
            "bsonType": "string",
            "description": "Nom du service en français"
          },
          "nameEn": {
            "bsonType": "string",
            "description": "Nom du service en anglais"
          },
          "descriptionFr": {
            "bsonType": "string",
            "description": "Description en français"
          },
          "descriptionEn": {
            "bsonType": "string",
            "description": "Description en anglais"
          },
          "category": {
            "bsonType": "string",
            "enum": ["tires", "mechanics"],
            "description": "Catégorie du service"
          },
          "basePrice": {
            "bsonType": "number",
            "minimum": 0,
            "description": "Prix de base du service"
          },
          "estimatedDuration": {
            "bsonType": "int",
            "minimum": 15,
            "description": "Durée estimée en minutes"
          },
          "options": {
            "bsonType": "array",
            "description": "Options disponibles pour ce service"
          },
          "status": {
            "bsonType": "string",
            "enum": ["active", "inactive"],
            "description": "Statut du service"
          },
          "creator": {
            "bsonType": "string",
            "description": "Créateur du service"
          },
          "createdAt": {
            "bsonType": "string",
            "title": "datetime",
            "description": "Date de création ISO 8601"
          },
          "updatedAt": {
            "bsonType": "string",
            "title": "datetime",
            "description": "Date de mise à jour ISO 8601"
          }
        },
        "additionalProperties": true
      }
    },
    "validationLevel": "moderate",
    "validationAction": "warn"
  }
}
